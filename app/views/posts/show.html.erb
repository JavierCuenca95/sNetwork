<p id="notice"><%= notice %></p>

<p>
  <strong>Usuario:</strong>
  <%= @post.user.nick %>
</p>

<p>
  <strong>Contenido:</strong>
  <%= @post.contenido %>
</p>

<% if @post.user == current_user  or current_user.has_role? :admin%>
	<%= link_to 'Edit', edit_post_path(@post) %> |
	<%= link_to 'Back', posts_path %>
<% end %>
