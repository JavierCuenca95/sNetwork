<%= image_tag(@post_attachment.avatar, class: "post-image-index",:multipart => true)%>
<%= simple_form_for(@post_attachment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.hidden_field :post_id, :value => @post_attachment.post.id %>
    <%= f.input :avatar %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
